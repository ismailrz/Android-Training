<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"


        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="18dp"
            android:layout_weight="2.7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/alamin"
            >

        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_gravity="center"
            android:layout_weight=".8"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Md. AL-AMIN "
            android:textSize="20dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <include
            layout="@layout/layout2"
            ></include>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_email_black_24dp"
                />
            <TextView
                android:layout_marginLeft="15sp"
                android:layout_marginTop="13sp"
                android:textSize="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="alaamincse039@gmail.com"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_phone_android_black_24dp"
                />
            <TextView
                android:layout_marginLeft="15sp"
                android:layout_marginTop="13sp"
                android:textSize="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01738088967"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_insert_link_black_24dp"
                />
            <TextView
                android:layout_marginLeft="15sp"
                android:layout_marginTop="13sp"
                android:textSize="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="facebook.com/md.Alamin"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow Me"
            android:textColor="@color/cc"
            android:background="@color/colorPrimary"
            android:textSize="23dp"
            android:padding="10dp"
            />
    </LinearLayout>


</LinearLayout>